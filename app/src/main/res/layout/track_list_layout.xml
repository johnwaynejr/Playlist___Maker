<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp">

        <ImageView
            android:id="@+id/artistCover"
            android:layout_width="@dimen/tl_image_view_size"
            android:layout_height="@dimen/tl_image_view_size"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="?attr/colorOnSecondary"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/mm_btn_margin_bottom">

                <TextView
                    android:id="@+id/trackName"
                    style="@style/track_name"
                    android:text="The man who sold the world"/>

                <TextView
                    android:id="@+id/trackArtist"
                    style="@style/track_artist"
                    android:text="David Bowie Â· 4:35"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tl_image_view_size">

                <ImageView
                    style="@style/tl_arrow"
                    app:srcCompat="@drawable/ic_arrow_fwd" />
        </RelativeLayout>


</LinearLayout>